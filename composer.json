{
  "name": "neilwilliams/plugin-starter",
  "description": "Starter WordPress plugin",
  "autoload": {
    "psr-4": {
      "PluginStarter\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=WordPress src"
    },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
